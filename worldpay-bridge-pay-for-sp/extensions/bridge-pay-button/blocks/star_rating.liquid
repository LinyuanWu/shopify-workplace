{% comment %} 
  Version 39.0 - 融合 V33 的布局机制与 V38 的包装盒技术，解决可见性与并排问题
{% endcomment %}

<!-- 静态按钮：仅当勾选时在当前位置（如产品页）显示 -->
{% if block.settings.show_at_position %}
<div class="bridge-pay-static-container" style="margin: 20px 0; width: 100%; display: block !important;">
  <button class="bridge-checkout-trigger-btn" style="
    background-color: {{ block.settings.btn_color }}; 
    color: #fff; width: 100%; padding: 15px; border: none; border-radius: 4px; 
    font-weight: bold; cursor: pointer; font-size: 16px; display: block !important;
  ">
    {{ block.settings.btn_text }}
  </button>
</div>
{% endif %}

<script>
(function() {
  // 核心：单例保护，防止脚本重复执行
  if (window.bridgePayInitialized) return;
  window.bridgePayInitialized = true;

  const CONFIG = {
    text: '{{ block.settings.btn_text }}',
    color: '{{ block.settings.btn_color }}',
    hideNative: {% if block.settings.hide_native %}true{% else %}false{% endif %}
  };

  async function handleCheckout(e) {
    e.preventDefault();
    const btn = e.target;
    btn.innerText = 'Processing...';
    btn.disabled = true;

    try {
      const variantId = document.querySelector('form[action*="/cart/add"] [name="id"]')?.value 
                     || document.querySelector('[name="id"]')?.value;
      const quantity = document.querySelector('[name="quantity"]')?.value || 1;

      if (variantId && !isNaN(variantId)) {
        await fetch(window.Shopify.routes.root + 'cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: [{ id: parseInt(variantId), quantity: parseInt(quantity) }] })
        });
        await new Promise(r => setTimeout(r, 400));
      }
      window.location.href = window.Shopify.routes.root + 'apps/safe-pay';
    } catch (err) {
      window.location.href = window.Shopify.routes.root + 'apps/safe-pay';
    }
  }

  // 1. 代理事件处理
  document.addEventListener('click', function(e) {
    if (e.target && e.target.classList.contains('bridge-checkout-trigger-btn')) {
      handleCheckout(e);
    }
  });

  // 2. 注入逻辑 (融合 V33 成功样式)
  function injectToDrawer() {
    const nativeBtn = document.querySelector('button[name="checkout"], .cart__checkout-button, #checkout');
    
    if (nativeBtn && !document.getElementById('bridge-injected-wrapper')) {
      // 创建强制换行的包装盒
      const wrapper = document.createElement('div');
      wrapper.id = 'bridge-injected-wrapper';
      // 样式核心：flex: 0 0 100% 确保其独占一行
      wrapper.style.cssText = 'width: 100% !important; flex: 0 0 100% !important; display: block !important; margin-bottom: 12px !important; order: -1 !important;';

      const bridgeBtn = document.createElement('button');
      bridgeBtn.innerText = CONFIG.text;
      bridgeBtn.type = 'button';
      bridgeBtn.style.cssText = `
        background-color: ${CONFIG.color} !important;
        color: #fff !important; 
        width: 100% !important; 
        padding: 16px !important; 
        border: none !important; 
        border-radius: 4px !important;
        font-weight: bold !important; 
        cursor: pointer !important; 
        font-size: 16px !important;
        display: block !important;
      `;
      
      bridgeBtn.onclick = handleCheckout;
      wrapper.appendChild(bridgeBtn);
      
      // 插入
      nativeBtn.parentNode.insertBefore(wrapper, nativeBtn);

      if (CONFIG.hideNative) {
        nativeBtn.style.setProperty('display', 'none', 'important');
      }
    }
  }

  const observer = new MutationObserver(injectToDrawer);
  observer.observe(document.body, { childList: true, subtree: true });
})();
</script>

{% schema %}
{
  "name": "Bridge Pay Button",
  "target": "section",
  "settings": [
    { "type": "text", "id": "btn_text", "label": "Button Text", "default": "SECURE CHECKOUT (WORLDPAY)" },
    { "type": "color", "id": "btn_color", "label": "Button Color", "default": "#000000" },
    { "type": "checkbox", "id": "hide_native", "label": "Hide Native Checkout Button", "default": false },
    { "type": "checkbox", "id": "show_at_position", "label": "Show Button at this location", "default": true }
  ]
}
{% endschema %}